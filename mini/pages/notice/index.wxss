.container {
  min-height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container .loading {
  display: flex;
  align-items: center;
  justify-content: center;
}

.container .loading .text {
  margin-left: 16rpx;
}

.container .no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .no-data .img {
  width: 140rpx;
  margin-bottom: 40rpx;
}

.notice {
  padding: 24rpx;
}

.title {
  font-size: 42rpx;
  margin-top: 16rpx;
  margin-bottom: 8px;
  text-align: center;
}

.time {
  font-size: 24rpx;
  padding-bottom: 8px;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #ddd;
  text-align: center;
}

.description {
  font-size: 32rpx;
}
