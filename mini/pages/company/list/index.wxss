.swiper {
  height: 380rpx;
}

.swiper-img {
  width: 100%;
}

.search-box {
  padding: 12rpx;
  background: #e5e5e5;
}

.company-list {
  padding-top: 24rpx;
}

.company-list .company {
  padding: 24rpx 24rpx 0 24rpx;
  margin: 0 24rpx 24rpx;
  background: #fff;
  box-shadow: 0rpx 2rpx 10rpx 0rpx rgba(211, 211, 211, 0.68);
  border-radius: 8rpx;
}

.company-list .company .top {
  display: flex;
}

.top .logo {
  width: 120rpx;
  height: 120rpx;
  margin-right: 16rpx;
}

.top .logo image {
  width: 100%;
  height: 100%;
}

.top .info {
  flex: 1;
}

.top .info .name {
  width: 550rpx;
  margin-bottom: 8rpx;
}

.top .info .word {
  width: 550rpx;
  margin-bottom: 16rpx;
}

.top .info .tag-list {
  display: flex;
  margin-bottom: 18rpx;
  flex-wrap: wrap;
}

.top .info .tag-list .tag {
  height: 38rpx;
  line-height: 38rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  background: rgba(242, 246, 252, 1);
  border-radius: 5rpx;
  margin-right: 16rpx;
  font-size: 24rpx;
  color: #757575;
  margin-bottom: 12rpx;
}

.company-list .company .bottom {
  display: flex;
  height: 94rpx;
  font-size: 24rpx;
}

.bottom .location {
  margin-right: 56rpx;
  display: flex;
  align-items: center;
}

.bottom .position {
  display: flex;
  align-items: center;
}

.bottom .icon {
  margin-right: 8rpx;
}

.company-list .no-data {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 200rpx;
}

.company-list .no-data .img {
  width: 140rpx;
  margin-bottom: 30rpx;
}

.company-list .loading {
  display: flex;
  align-items: center;
  justify-content: center;
}

.company-list .loading .text {
  margin-left: 16rpx;
}
