/* 布局 */

.flex-row-container {
  display: flex;
}

.flex-column-container {
  display: flex;
  flex-direction: column;
}

.row-warp {
  flex-flow: row wrap;
}

.ml12 {
  margin-left: 12rpx;
}

.ml8 {
  margin-left: 8rpx;
}

.mt12 {
  margin-top: 12rpx;
}

.mt8 {
  margin-top: 8rpx;
}

/* 边框 */

.border-top,
.border-bottom {
  position: relative;
}

.border-top::before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1rpx;
  border-top: 1rpx solid #e5e5e5;
  color: #e5e5e5;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.border-bottom::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1rpx;
  border-top: 1rpx solid #e5e5e5;
  color: #e5e5e5;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

/* 内容截断 */

.text-overflow {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

